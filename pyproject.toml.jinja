# ============================================================================
# Project Metadata
# ============================================================================
[project]
name = "{{ project_name }}"
version = "0.1.0"
description = "{{ project_name }} project"
requires-python = "=={{ python_version }}.*"
dependencies = [
{%- if data_science_packages %}
    "pandas",
    "numpy",
    "matplotlib",
    "seaborn",
    "scikit-learn",
{%- endif %}
{%- if pytorch_support == "cpu" %}
    "torch",
{%- elif pytorch_support == "gpu" %}
    "torch",
    "torchvision",
{%- endif %}
{%- if gradio_app %}
    "gradio",
{%- endif %}
]

{%- if author_name %}

authors = [
    { name = "{{ author_name }}"{% if author_email %}, email = "{{ author_email }}"{% endif %} }
]
{%- endif %}

readme = "README.md"

# ============================================================================
# Build System
# ============================================================================
[build-system]
requires = ["hatchling"]
build-backend = "hatchling.build"

# ============================================================================
# Development Dependencies
# ============================================================================
[dependency-groups]
dev = [
{%- if linter == "ruff" %}
    "ruff",
{%- endif %}
{%- if dev_tools %}
    "tqdm",
    "ipykernel",
    "jupytext",
{%- endif %}
    "pytest",
    "pytest-cov",
]

# ============================================================================
# Tool Configurations
# ============================================================================
{%- if linter == "ruff" %}

# --- Ruff Configuration ---
[tool.ruff]
line-length = 100
target-version = "py{{ python_version.replace('.', '') }}"
exclude = [
    ".git",
    ".venv",
    "__pycache__",
    "*.egg-info",
    ".pytest_cache",
    ".ipynb_checkpoints",
]

[tool.ruff.lint]
select = [
    "E",   # pycodestyle errors
    "W",   # pycodestyle warnings
    "F",   # pyflakes
    "I",   # isort
    "N",   # pep8-naming
    "UP",  # pyupgrade
    "B",   # flake8-bugbear
    "C4",  # flake8-comprehensions
]
ignore = []

[tool.ruff.lint.per-file-ignores]
"*.ipynb" = ["F401"]

[tool.ruff.format]
quote-style = "double"
indent-style = "space"
skip-magic-trailing-comma = false
line-ending = "auto"
{%- endif %}

# --- Pytest Configuration ---
[tool.pytest.ini_options]
testpaths = ["tests"]
python_files = ["test_*.py", "*_test.py"]
addopts = [
    "--strict-markers",
    "--strict-config",
    "-ra",
]
